CREATE TABLE Wallet (
    id TEXT NOT NULL PRIMARY KEY,
    userId TEXT NOT NULL,
    balance REAL NOT NULL,
    active INTEGER NOT NULL DEFAULT 1
);

CREATE INDEX idx_wallet_userId ON Wallet(userId);

findByUserId:
SELECT * FROM Wallet WHERE userId = ?;

insertOrReplace:
INSERT OR REPLACE INTO Wallet (id, userId, balance, active) VALUES (?, ?, ?, ?);

deleteAll:
DELETE FROM Wallet;
